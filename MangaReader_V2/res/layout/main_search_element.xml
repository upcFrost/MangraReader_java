<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_search_element_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_background_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/main_search_element_book_cover"
        android:layout_width="54dp"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher"
        android:padding="2dp" />

    <LinearLayout
        android:id="@+id/main_search_element_info_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/main_search_element_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="TextView"
            android:textColor="#0f2233"
            android:textSize="15dp"
            android:textStyle="bold"
            android:maxLines="3" />

        <TextView
            android:id="@+id/main_search_element_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="TextView"
            android:textColor="#0f2233"
            android:textSize="12dp"
            android:maxLines="1" />
    </LinearLayout>

</LinearLayout>